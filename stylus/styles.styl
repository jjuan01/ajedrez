boardSize = 60%
fontSize = 15px
colorWhites = white
colorBlacks = green

body 
  font-size: fontSize

.container
  margin: auto
  width: 'calc(%s + 2em)' %boardSize
  display: grid
  grid-template-columns: 1em calc(100% - 2em) 1em
  grid-template-rows: auto
  grid-template-areas:  ". lettersTop ." "numbersLeft board numbersRight" ". lettersBottom ."

.letters
  display: grid
  grid-template-columns: repeat(8, 1fr)
  &.top
    grid-area: lettersTop 

  &.bottom
    grid-area: lettersBottom
.letter
  text-align: center

.numbers
  display: grid
  grid-template-rows: repeat(8, 1fr)
  align-items: center
  &.left
    grid-area: numbersLeft
  &.right
    grid-area: numbersRight
.number
  text-align: center

.board
  grid-area: board
  display: grid
  grid-template-columns: repeat(8, 1fr)
  grid-template-rows: repeat(8, 1fr)

.cell
  border: 1px solid #fff;
  text-align: center;
  width: 100%
  height: 0
  padding-bottom: 100%
  
  &.w
    background: colorWhites
  &.b
    background: colorBlacks
  
